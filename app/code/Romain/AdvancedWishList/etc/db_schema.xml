<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <!-- Table principale des wishlists avancÃ©es -->
    <table name="advanced_wishlist" resource="default" engine="innodb" comment="Advanced WishList Table">
        <column xsi:type="int" name="wishlist_id" unsigned="true" nullable="false" identity="true" comment="WishList ID"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="WishList Name"/>
        <column xsi:type="text" name="description" nullable="true" comment="WishList Description"/>
        <column xsi:type="boolean" name="is_public" nullable="false" default="0" comment="Is Public"/>
        <column xsi:type="varchar" name="share_code" nullable="true" length="32" comment="Share Code"/>
        <column xsi:type="boolean" name="is_default" nullable="false" default="0" comment="Is Default WishList"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="wishlist_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="ADV_WISHLIST_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" 
                   table="advanced_wishlist" column="customer_id" 
                   referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        
        <constraint xsi:type="unique" referenceId="ADV_WISHLIST_SHARE_CODE">
            <column name="share_code"/>
        </constraint>
        
        <index referenceId="ADV_WISHLIST_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        
        <index referenceId="ADV_WISHLIST_IS_PUBLIC" indexType="btree">
            <column name="is_public"/>
        </index>
    </table>
    
    <!-- Table des items dans les wishlists -->
    <table name="advanced_wishlist_item" resource="default" engine="innodb" comment="Advanced WishList Item Table">
        <column xsi:type="int" name="item_id" unsigned="true" nullable="false" identity="true" comment="Item ID"/>
        <column xsi:type="int" name="wishlist_id" unsigned="true" nullable="false" comment="WishList ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" comment="Store ID"/>
        <column xsi:type="timestamp" name="added_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Added At"/>
        <column xsi:type="text" name="description" nullable="true" comment="Item Description"/>
        <column xsi:type="decimal" name="qty" scale="4" precision="12" unsigned="false" nullable="false" default="1" comment="Qty"/>
        <column xsi:type="boolean" name="price_alert" nullable="false" default="0" comment="Price Alert Enabled"/>
        <column xsi:type="decimal" name="target_price" scale="4" precision="12" unsigned="false" nullable="true" comment="Target Price for Alert"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="ADV_WISHLIST_ITEM_WISHLIST_ID_ADV_WISHLIST_WISHLIST_ID" 
                   table="advanced_wishlist_item" column="wishlist_id" 
                   referenceTable="advanced_wishlist" referenceColumn="wishlist_id" onDelete="CASCADE"/>
        
        <constraint xsi:type="foreign" referenceId="ADV_WISHLIST_ITEM_PRODUCT_ID_CATALOG_PRODUCT_ENTITY_ENTITY_ID" 
                   table="advanced_wishlist_item" column="product_id" 
                   referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        
        <constraint xsi:type="foreign" referenceId="ADV_WISHLIST_ITEM_STORE_ID_STORE_STORE_ID" 
                   table="advanced_wishlist_item" column="store_id" 
                   referenceTable="store" referenceColumn="store_id" onDelete="CASCADE"/>
        
        <index referenceId="ADV_WISHLIST_ITEM_WISHLIST_ID" indexType="btree">
            <column name="wishlist_id"/>
        </index>
        
        <index referenceId="ADV_WISHLIST_ITEM_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        
        <index referenceId="ADV_WISHLIST_ITEM_PRICE_ALERT" indexType="btree">
            <column name="price_alert"/>
        </index>
    </table>
    
    <!-- Table pour les partages de wishlist -->
    <table name="advanced_wishlist_share" resource="default" engine="innodb" comment="Advanced WishList Share Log">
        <column xsi:type="int" name="share_id" unsigned="true" nullable="false" identity="true" comment="Share ID"/>
        <column xsi:type="int" name="wishlist_id" unsigned="true" nullable="false" comment="WishList ID"/>
        <column xsi:type="varchar" name="shared_with_email" nullable="true" length="255" comment="Shared With Email"/>
        <column xsi:type="varchar" name="share_message" nullable="true" length="500" comment="Share Message"/>
        <column xsi:type="timestamp" name="shared_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Shared At"/>
        <column xsi:type="int" name="view_count" unsigned="true" nullable="false" default="0" comment="View Count"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="share_id"/>
        </constraint>
        
        <constraint xsi:type="foreign" referenceId="ADV_WISHLIST_SHARE_WISHLIST_ID_ADV_WISHLIST_WISHLIST_ID" 
                   table="advanced_wishlist_share" column="wishlist_id" 
                   referenceTable="advanced_wishlist" referenceColumn="wishlist_id" onDelete="CASCADE"/>
        
        <index referenceId="ADV_WISHLIST_SHARE_WISHLIST_ID" indexType="btree">
            <column name="wishlist_id"/>
        </index>
    </table>
</schema>